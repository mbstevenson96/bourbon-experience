<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<h1>My Inventory</h1>

<main>
  <table>
    <thead>
      <tr>
        <th>Title of Bottle:</th>
        <th>Distillery:</th>
        <th>Size:</th>
      </tr>
    </thead>
    <tbody>
      <% bottles.forEach(bottle => { %>
        <tr>
          <td><%= bottle.title %></td>
          <td><%= bottle.distillery %></td>
          <td><%= bottle.size %></td>
          <td><%= bottle.notes %></td>
          <td><%= bottle.type %></td>
          <td><%= bottle.mash %></td>
          <td><%= bottle.proof %></td>
          <td><%= bottle.strength %></td>
          <td><%= bottle.color %></td>
          <td><%= bottle.hug %></td>
          <td><%= bottle.flavor %></td>
        </tr>
      <% }) %> 
    </tbody>
  </table>
</main>

