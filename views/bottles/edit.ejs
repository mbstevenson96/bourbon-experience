<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/bottles/new.css" />
<%- include('../partials/nav') %>

<main>
  <% if (user) { %>
    <h1>Edit <%= bottle.title %></h1>
    <form action="/bottles/<%= bottle._id %>?_method=PATCH" method="POST">
      <label>Title of Bottle:
        <input type="text" name="title" id="title-input" value="<%= bottle.title %>">
      </label>
      <label>Distillery:
        <input type="text" name="distillery" id="distillery-input" value="<%= bottle.distillery %>">
      </label>
      <label>Spirit:
        <input type="text" name="spirit" id="spirit-input" value="<%= bottle.spirit %>">
      </label>
      <label>Size(ml):
        <input type="number" name="size" id="size-input" value="<%= bottle.size %>">
      </label>
      <label>Notes:
        <input type="text" name="notes" id="notes-input" value="<%= bottle.notes %>">
      </label>
      <label>Type (Bourbon, Rye, Wheated):
        <input type="text" name="type" id="type-input" value="<%= bottle.type %>">
      </label>
      <label>Mash Bill:
        <input type="text" name="mash" id="mash-input" value="<%= bottle.mash %>">
      </label>
      <label>Proof:
        <input type="number" name="proof" id="proof-input" value="<%= bottle.proof %>">
      </label>
      <label>Barrel Strength:
        <input type="checkbox" name="strength" id="strength-input" value="<%= bottle.strength %>">
      </label>
      <label>Color:
        <input type="text" name="color" id="color-input" value="<%= bottle.color %>">
      </label>
      <label>Hug:
        <input type="text" name="hug" id="hug-input" value="<%= bottle.hug %>">
      </label>
      <label>On the Tongue:
        <input type="text" name="flavor" id="flavor-input" value="<%= bottle.flavor %>">
      </label>
      <label>Quantity Owned:
        <input type="number" name="quantity" id="quantity-input" value="<%= bottle.quantity %>">
      </label>
      <label>Collectable:
        <input type="checkbox" name="collectable" id="collectable-input" value="<%= bottle.collectable %>">
      </label>
      <label>Open to Share:
        <input type="checkbox" name="open" id="open-input" value="<%= bottle.open %>">
      </label>
      <button type="submit">Update Bottle</button>
    </form>
  <% } %>
</main>

<%- include('../partials/footer') %>